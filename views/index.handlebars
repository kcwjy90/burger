<div class="row body">

      <div class="col side align-text-bottom main">
        <h2>Let's Eat Them!</h2>
        <ul class="smallfont">
            {{#each burger}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="col-6 middle align-text-bottom">

     <h2>Add a burger</h2>

      <form class="create-form">

          <div class="form-group">
              <label for="bu">Burger Name:</label>
              <input type="text" id="bu" name="name">
          </div>

          <button type="submit">Add :)</button>

      </form>
    </div>

    <div class="col side align-text-bottom main">
        <h2>You ate too much!</h2>
        <ul class="smallfont">
            {{#each burger}}
              {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
        </ul>
    </div>
    
</div>

